{% extends "BackBundle::layout.html.twig" %}
{% block pageHeader %}{% endblock %}
{% block pageContent %}
    <h1>Classe {{ classe.label }}</h1>
    <br>
    <div class="panel panel-default">
        <div class="panel-heading">
            <b>Historique des élèves</b>
        </div>
        <!-- /.panel-heading -->
        <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline"
               id="dataTables-example">
            <thead>
            <tr>
                <th>Elève</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for eleve in classe.eleve %}
            <tr>
                <td>2016/2017</td>
                <td>Dupont Adrien</td>
                <td>M. Ammar</td>
                <td>M. Salesse</td>
                <td>Voir Detail</td>
            </tr>
            <tr>
                <td>2015/2016</td>
                <td>Dupont Bernard</td>
                <td>M. Ammar</td>
                <td>M. Ammar</td>
                <td class="text-center">
                    Voir Detail
                </td>
            </tr>

            </tbody>
        </table>
    </div>


{% endblock %}
{% block javascript %}
    {{ parent() }}
    <!-- DataTables JavaScript -->
    <script src="{{ asset('datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('datatables-responsive/dataTables.responsive.js') }}"></script>
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}
