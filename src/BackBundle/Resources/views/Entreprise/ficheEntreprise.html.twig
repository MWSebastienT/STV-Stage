{% extends "BackBundle::layout.html.twig" %}
{% block pageHeader %}{{ entreprise.nom }}{% endblock %}
{% block pageContent %}
    <h1>Informations de l'entreprise</h1>
    <p>Cette sociéte totalise <b>{{ lesStages | length }}</b>stage à son actif</p>
    <p>{{ entreprise.leTypeEnt.label }}</p>
    <p>{{ entreprise.cA }}</p>
    <p>{{ entreprise.adresse }}</p>
    <p>{{ entreprise.zipCode }}</p>
    <p>{{ entreprise.city }}</p>
    <p>{{ entreprise.country }}</p>
    <p>{{ entreprise.telephone }}</p>

    <br>
    <a href="{{ path('entreprise_add_refpro', {'id': entreprise.id}) }}" class="btn btn-success">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter un referent pro
    </a>
    {% for message in app.flashes('refProOk') %}
        <div class="alert alert-success alert-dismissible spaceTop" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
            Stage ajouté avec <strong>succès</strong> !
        </div>
    {% endfor %}
    {% for message in app.flashes('entrepriseModif') %}
        <div class="alert alert-success alert-dismissible spaceTop" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
            Stage modifié avec <strong>succès</strong> !
        </div>
    {% endfor %}
    {% for message in app.flashes('entrepriseDeleteOk') %}
        <div class="alert alert-success alert-dismissible spaceTop" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span
                        aria-hidden="true">&times;</span></button>
            Stage supprimé avec <strong>succès</strong> !
        </div>
    {% endfor %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <b>Les Referents Pro</b>
        </div>
        <!-- /.panel-heading -->
        <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline"
               id="dataTables-example">
            <thead>
            <tr>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Telephone</th>
                <th>Ville</th>
                <th>Code Postal</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for refPro in lesRefPro %}
                <tr>
                    <td class="text-center">{{ refPro.firstName }}</td>
                    <td class="text-center">{{ refPro.lastName }}</td>
                    <td class="text-center">{{ refPro.phone }}</td>
                    <td class="text-center">{{ refPro.city }}</td>
                    <td class="text-center">{{ refPro.zipCode }}</td>
                    <td class="text-center">
                        <button type="button" class="btn btn-success" aria-label="Left Align">
                            <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                        </button>
                        {#<a href = "{{ path('eleve_edit',{'id': eleve.id}) }}" class="btn btn-primary" aria-label="Left Align">#}
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </a>

                        <button data-toggle="modal" data-target="#exampleModal" type="button" class="btn btn-danger"
                                aria-label="Left Align">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </button>

                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                             aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title" id="exampleModalLabel">Suppression élève</h1>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <h3>Êtes-vous sûr de vouloir supprimer cette élève ?</h3>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal"><span
                                                    class="glyphicon glyphicon-arrow-left"></span> Retour
                                        </button>
                                        {#<a href = "{{ path('eleve_remove',{'id': eleve.id}) }}" type="button" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Supprimer élève</a>#}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <br>
    <div class="panel panel-default">
        <div class="panel-heading">
            <b>Les Stages</b>
        </div>
        <!-- /.panel-heading -->
        <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline"
               id="dataTables-example2">
            <thead>
            <tr>
                <th>Date Debut</th>
                <th>Date Fin</th>
                <th>Techno</th>
                <th>Eleve</th>
                <th>Referent Pro</th>
                <th>Referent Peda</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for stage in lesStages %}
                <tr>
                    <td class="text-center">{{ stage.dateDebut|date("m/d/Y") }}</td>
                    <td class="text-center">{{ stage.dateFin|date("m/d/Y") }}</td>
                    <td class="text-center">{{ stage.lesTechno | length }}</td>
                    <td class="text-center">{{ stage.leEleve }}</td>
                    <td class="text-center">{{ stage.leReferentPro }}</td>
                    <td class="text-center">{{ stage.leReferentPeda }}</td>
                    <td class="text-center">
                        <a href="{{ path('entreprise_show', {'id': entreprise.id}) }}">
                            <button type="button" class="btn btn-success" aria-label="Left Align">
                            <span class="glyphicon
                            glyphicon-eye-open" aria-hidden="true"></span>
                            </button>
                        </a>
                        <a href="{{ path('entreprise_edit',{'id': entreprise.id}) }}" class="btn btn-primary"
                           aria-label="Left Align">
                            <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        </a>
                        <button data-toggle="modal" data-target="#exampleModal" type="button" class="btn btn-danger"
                                aria-label="Left Align">
                            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        </button>
                        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"
                             aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Suppresion Entreprise</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Êtes-vous sûr de vouloir supprimer cette entreprise ?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <a href="{{ path('entreprise_remove',{'id': entreprise.id}) }}" type="button"
                                           class="btn btn-danger">Oui</a>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Non</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
{% block javascript %}
    {{ parent() }}
    <!-- DataTables JavaScript -->
    <script src="{{ asset('datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('datatables-responsive/dataTables.responsive.js') }}"></script>
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
        $(document).ready(function () {
            $('#dataTables-example2').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}
