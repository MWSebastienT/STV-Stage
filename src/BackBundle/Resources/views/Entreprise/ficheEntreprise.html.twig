{% extends "BackBundle::layout.html.twig" %}
{% block pageHeader %}{{ entreprise.nom }}{% endblock %}
{% block pageContent %}
    <h1>Informations de l'entreprise</h1>
    <p>Cette sociéte totalise <b>#NBRDESTAGE</b> à son actif</p>
    <p>{{ entreprise.leTypeEnt.label }}</p>
    <p>{{ entreprise.cA }}</p>
    <p>{{ entreprise.adresse }}</p>
    <p>{{ entreprise.zipCode }}</p>
    <p>{{ entreprise.city }}</p>
    <p>{{ entreprise.country }}</p>
    <p>{{ entreprise.telephone }}</p>
    <br>
    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Ajouter un réferent technique
    </button>
    <div class="panel panel-default">
        <div class="panel-heading">
            <b>Historique des stages</b>
        </div>
        <!-- /.panel-heading -->
        <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example">
            <thead>
            <tr>
                <th>Année</th>
                <th>Elève</th>
                <th>Référent pégagogique</th>
                <th>Référent professionnel</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>2016/2017</td>
                <td>Dupont Adrien</td>
                <td>M. Ammar</td>
                <td>M. Salesse</td>
                <td>Voir Detail</td>
            </tr>
            <tr>
                <td>2015/2016</td>
                <td>Dupont Bernard</td>
                <td>M. Ammar</td>
                <td>M. Ammar</td>
                <td>Voir Detail</td>
            </tr>

            </tbody>
        </table>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ajouter un Referent Pro</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal','data-toggle':'validator'}}) }}
                    {# Idem pour un autre champ. #}
                    <div class="form-group">
                        {{ form_label(form.lastName, "Nom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        {{ form_errors(form.lastName) }}
                        <div class="col-sm-9">
                            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.firstName, "Prenom", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        {{ form_errors(form.firstName) }}
                        <div class="col-sm-9">
                            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.phone, "Téléphone", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        {{ form_errors(form.phone) }}
                        <div class="col-sm-9">
                            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.address, "Adresse", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        {{ form_errors(form.address) }}
                        <div class="col-sm-9">
                            {{ form_widget(form.address, {'attr': {'class': 'form-control selectpicker'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.zipCode, "Code postal", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        {{ form_errors(form.zipCode) }}
                        <div class="col-sm-9">
                            {{ form_widget(form.zipCode, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.city, "Ville", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
                        {{ form_errors(form.city) }}
                        <div class="col-sm-9">
                            {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>




                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.phone) }}
                    {{ form_row(form.city) }}
                    {{ form_row(form.address) }}
                    {{ form_row(form.zipCode) }}

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><span
                                class="glyphicon glyphicon-remove" aria-hidden="true"></span> Fermer
                    </button>
                    {{ form_widget(form.Valider, {'attr': {'class': 'btn btn-success'}}) }}
                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>





{% endblock %}
{% block javascript %}
    {{ parent() }}
    <!-- DataTables JavaScript -->
    <script src="{{ asset('datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('datatables-responsive/dataTables.responsive.js') }}"></script>
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}
