{% extends "BackBundle::layout.html.twig" %}
{% block pageHeader %}{{ stage.leEntreprise }}{% endblock %}
{% block pageContent %}
    <h1>{{ stage.leEleve }}</h1>
    <p><b>Date d√©but: </b>{{ stage.dateDebut | date("d/m/Y") }}</p>
    <p><b>Date Fin: </b>{{  stage.dateFin | date("d/m/Y") }}</p>
    {% for techno in stage.lesTechno %}
        <p><b>{{ techno.label }}</b></p>
    {% endfor %}
    <p><b>Referent Pro: </b>{{ stage.leReferentPro }}</p>
    <p><b>Referent Peda: </b>{{ stage.leReferentPeda }}</p>
    <a href="{{ path('visite_add') }}" class="btn btn-success">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Nouvelle Visite
    </a>
    <div class="panel panel-default">
        <div class="panel-heading">
            <b>Historique des visites</b>
        </div>
        <!-- /.panel-heading -->
        <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline"
               id="dataTables-example">
            <thead>
            <tr>
                <th>Date</th>
                <th>Observation</th>
            </tr>
            </thead>
            <tbody>
            {% for visite in listeVisite %}
                <tr>
                    <td class="text-center">
                        {{ visite.date| date("d/m/Y") }}
                    </td>
                    <td class="text-center">{{ visite.obs }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>


{% endblock %}
{% block javascript %}
    {{ parent() }}
    <!-- DataTables JavaScript -->
    <script src="{{ asset('datatables/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('datatables-plugins/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('datatables-responsive/dataTables.responsive.js') }}"></script>
    <!-- Page-Level Demo Scripts - Tables - Use for reference -->
    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
    </script>
{% endblock %}
