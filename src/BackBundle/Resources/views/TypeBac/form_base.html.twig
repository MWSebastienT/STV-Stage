{% extends "BackBundle::layout.html.twig" %}

{% block pageHeader %}

    {% if action %}
        Ajout d'un type de BAC
    {% else %}
        Modification d'un type de BAC
    {% endif %}


{% endblock %}

{% block pageContent %}

    <div class="formWidth container">

        {{ form_start(form, {'attr': {'class': 'form-horizontal validation','data-toggle':'validator'}}) }}
        {# Idem pour un autre champ. #}

        <div class="form-group">
            {{ form_label(form.label, "Type de bac", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.label) }}
            <div class="col-sm-10">
                {{ form_widget(form.label, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        {{ form_row(form.label) }}
        <div class="spaceButton">
            <a href="{{ path('promo_show') }}" class="btn btn-default"><span
                        class="glyphicon glyphicon-arrow-left"></span>
                Retour</a>
            {{ form_widget(form.Valider, {'attr': {'class': 'btn btn-success'}}) }}

        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}

    </div>
{% endblock %}






